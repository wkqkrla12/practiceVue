<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.vuebeck.web.repository.BoardRepository">


    <select id="findAll" resultType="Board">
        select *
        from board;
    </select>

    <insert id="saveBoard" parameterType="com.vuebeck.web.entity.Board">
        INSERT INTO board (id, hit, name, regdate, subject)
        VALUES (#{id}, #{hit}, #{name}, #{regdate}, #{subject})
    </insert>

    <select id="findById" resultType="Board">
        SELECT * FROM board WHERE id = #{id}
    </select>

</mapper>